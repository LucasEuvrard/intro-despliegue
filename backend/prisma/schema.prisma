generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ciudad {
  id             Int     @id @default(autoincrement())
  nombre         String
  foto_ciudad    String
  provincia      String
  tamaño        Decimal
  año_fundacion Int

  Hotel Hotel[]

  Reserva Reserva[]
}

model Hotel {
  id           Int     @id @default(autoincrement())
  nombre       String
  foto_hotel   String
  ciudad       Ciudad  @relation(fields: [id_ciudad], references: [id])
  id_ciudad    Int
  calificacion Decimal
  calle        String
  num_calle    Int
  telefono     Int

  Reserva Reserva[]
}

model Reserva {
  id                Int    @id @default(autoincrement())
  ciudad            Ciudad @relation(fields: [id_ciudad], references: [id])
  id_ciudad         Int
  hotel             Hotel  @relation(fields: [id_hotel], references: [id])
  id_hotel          Int
  nombre_reserva    String
  cant_personas     Int
  cant_habitaciones Int
  fecha_ingreso     String
  fecha_salida      String
}
